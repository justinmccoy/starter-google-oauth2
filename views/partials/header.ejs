<!-- views/partials/header.ejs -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container"> 
    <div class="navbar-brand">
        <span class="glyphicon glyphicon-lock d-inline-block align-top"></span>  
        OAUTH2.0 Example
    </div>
    <ul class="nav navbar-nav navbar-right d-inline-block">
      <% if (!user) { %>
        <li><a href="/auth/google"><span class="glyphicon glyphicon-log-in"></span></a></li>
      <% } else { %>
        <li>
            <a href="/profile">
              <img src="<%= user.photos[0].value %>" 
                    width="30" height="30" 
                    class="d-inline-block align-top img-circle"
                    alt="<%= user.displayName %>"/>
            </a>
        </li>  
        <li>
            <a href="/logout"><span class="glyphicon glyphicon-log-out d-inline-block align-top"></span></a>
        </li>  
      <% } %>
    </ul>
  </div>
</nav>